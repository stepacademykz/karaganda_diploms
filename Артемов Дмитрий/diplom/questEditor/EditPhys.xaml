<Window x:Class="questEditor.EditPhys"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:questEditor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Редактор вопросов" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>

            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>


        </Grid.RowDefinitions>
        <DataGrid Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"  FontSize="16" Name="dgEdit" CanUserAddRows="True" >
        </DataGrid>
        <Button Grid.Column="0" Grid.Row="4" x:Name="saveEdit" Content="Сохранить изменения" FontSize="20" Click="SaveEdit_Click"></Button>
        <Button Grid.Column="0" Grid.Row="6" x:Name="exit" Content="Выход" FontSize="20" Click="Exit_Click"></Button>

    </Grid>
</Window>
